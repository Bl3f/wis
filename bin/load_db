DATABASE_NAME=`python -c "import web.settings;print web.settings.DATABASES['default']['NAME']"`
DATABASE_USER=`python -c "import web.settings;print web.settings.DATABASES['default']['USER']"`
DATABASE_PASSWORD=`python -c "import web.settings;print web.settings.DATABASES['default']['PASSWORD']"`
DATABASE_ENGINE=`python -c "import web.settings;print web.settings.DATABASES['default']['ENGINE']"`

if [ "$DATABASE_ENGINE" = 'django.db.backends.postgresql_psycopg2' ]
then


    echo "Dropping PostgreSQL database ($DATABASE_NAME) ..."
    psql $DATABASE_USER -d $DATABASE_NAME -c "ALTER USER $DATABASE_USER CREATEDB; SELECT datname FROM pg_database;" &> /dev/null
    dropdb -U $DATABASE_USER $DATABASE_NAME
    if [ "$?" -eq "0" ]
    then
        dropdb -U $DATABASE_USER $DATABASE_NAME
    fi

    echo "Creating PostgreSQL database ($DATABASE_NAME) ..."
    createdb -U $DATABASE_USER $DATABASE_NAME -O $DATABASE_USER -E UTF8

    echo "Load datasets and models"
    ./manage.py syncdb
fi